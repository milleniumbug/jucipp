FROM ubuntu:16.04

RUN DEBIAN_FRONTEND=noninteractive apt-get update \
&& apt-get install -y \
      git \
      cmake \
      make \
      g++ \
      libclang-3.6-dev \
      liblldb-3.6-dev \
      clang-format-3.6 \
      pkg-config \
      libboost-filesystem-dev \
      libboost-regex-dev \
      libgtksourceviewmm-3.0-dev \
      aspell-en \
      libaspell-dev \
&& rm -rf /var/lib/apt/lists/*